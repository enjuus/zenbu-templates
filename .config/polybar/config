[colors]
foreground        = ${xrdb:foreground}
foreground_bright = ${xrdb:foreground}
background        = ${xrdb:background}
modb              = ${xrdb:color0}
modb1             = ${xrdb:color0}
modb2             = ${xrdb:color0}

red     = ${xrdb:color1}
orange  = ${xrdb:color9}
yellow  = ${xrdb:color3}
green   = ${xrdb:color2}
cyan    = ${xrdb:color6}
blue    = ${xrdb:color4}
magenta = ${xrdb:color5}
brown = ${xrdb:color7}


[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/top]
width = 100%
height = 25px
offset-x = 0
offset-y = 0

spacing             = 1
padding-left        = 0
padding-right       = 5
module-margin-left  = 0
module-margin-right = 0

font-0 = Lemon:size=8:antialias=true;2
font-1 = Siji:size=12:antialias=true;2

locale     = de_DE.UTF-8
background = ${colors.background}
foreground = ${colors.foreground}

modules-left = wrk date time title
modules-center = previous spotify next
modules-right = bat vol wifi theme

[module/spotify]
type              = custom/script
tail			        = true
exec              = sps listen
click-left        = sps play
click-right       = cover &
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding    = 2

[module/wrk]
type              = custom/script
tail			        = true
exec              = wrk-help
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding    = 2

[module/date]
type = custom/script
interval = 1.0
exec = ~/.barscripts/date.sh
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/time]
type              = custom/script
interval          = 1.0
exec              = date +%I:%M
format-padding    = 0
format-foreground = ${colors.foreground}
format-background = ${colors.background}


[module/previous]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = sps prev
format-foreground = ${colors.yellow}
format-background = ${colors.background}
format-padding    = 2

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec sps next
format-foreground = ${colors.yellow}
format-background = ${colors.background}
format-padding    = 2

[module/theme]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec themes &
format-foreground = ${colors.blue}
format-padding    = 2

[module/wifi]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal><label-connected>
; label-connected = %essid% %{F#66}%local_ip%
label-connected = %essid%
label-disconnected = %{F#66c6b8e6}%{F#ccd8d4e6} not connected
label-disconnected-foreground = #66c6b8e6
\ue24b
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.red}
format-padding    = 2

[module/2bws]
type              = custom/script
exec              = ~/.barscripts/2bws.sh
interval          = 0.01
format-padding    = 3
format-foreground = ${colors.background}
scroll-up         = exec ~/.barscripts/wscycle.sh -f
scroll-down = exec ~/.barscripts/wscycle.sh -r

[module/bat]
type              = custom/script
exec              = ~/.barscripts/bat
interval          = 100
format-padding    = 2
format-prefix     = " "
format-background = ${colors.background}
format-foreground = ${colors.foreground}

[module/vol]
type              = custom/script
exec              = exec ~/.barscripts/vol -q
interval          = 0.1
format-prefix     = " "
format-padding    = 2
scroll-up         = ~/scripts/vol -i
scroll-down = ~/scripts/vol -d

[module/title]
type              = custom/script
tail			= true
exec              = xtitle -s
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding    = 2


